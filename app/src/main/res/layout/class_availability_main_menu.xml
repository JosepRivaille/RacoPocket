<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/connection"
        android:src="@drawable/ic_cloud_off_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:contentDescription="@string/connection_problems"/>

    <ImageButton
        android:id="@+id/updateClassAvailability"
        android:src="@drawable/ic_autorenew_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/refresh_image_button"/>

    <LinearLayout
        android:id="@+id/class_info_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateClassAvailability"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lastUpdateClassAvailability"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/header1ClassAvailability"
                android:text="@string/class_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"/>

            <TextView
                android:id="@+id/header2ClassAvailability"
                android:text="@string/class_availability"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:gravity="center"/>

        </LinearLayout>
    
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/class_info_linear_layout"
        android:divider="#0E537B"
        android:dividerHeight="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
    </ListView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>