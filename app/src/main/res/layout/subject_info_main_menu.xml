<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <AutoCompleteTextView
        android:id="@+id/subjectSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/write_subject_initials"
        android:completionThreshold="1"
        android:backgroundTint="@color/raco_blue"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/queryButton"
        android:layout_toStartOf="@+id/queryButton"/>

    <Button
        android:id="@+id/queryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="@string/search"
        android:layout_alignBottom="@+id/subjectSelector"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subjectSelector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name -->
            <TextView
                android:id="@+id/subjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/black"/>

            <!-- General data -->
            <TextView
                android:id="@+id/subjectData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <!-- Bibliography -->
            <TextView
                android:id="@+id/subjectBibliography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <!-- Status ImageButtons -->
            <ImageButton
                android:id="@+id/dataRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/refresh"
                android:src="@drawable/ic_autorenew_black_24dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/refresh_image_button" />

            <ImageButton
                android:id="@+id/dataRemove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/delete"
                android:src="@drawable/ic_delete_black_24dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/delete_image_button" />

            <ImageButton
                android:id="@+id/dataError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_cloud_off_black_24dp"
                android:clickable="false"
                android:background="@android:color/transparent"
                android:contentDescription="@string/connection_image_button" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>