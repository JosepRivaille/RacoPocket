<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/updateNotifications"
        android:src="@drawable/ic_autorenew_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/refresh_image_button"/>

    <ImageView
        android:id="@+id/connectionNotifications"
        android:src="@drawable/ic_cloud_off_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:contentDescription="@string/connection_problems" />

    <ExpandableListView
        android:id="@+id/expListViewNotifications"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/updateNotifications"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ProgressBar
        android:id="@+id/progressBarNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>
    
</RelativeLayout>